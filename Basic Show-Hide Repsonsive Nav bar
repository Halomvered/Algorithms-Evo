document.addEventListener('click',function(e){
var target = e.target;
var navigation = document.querySelector('.js-mobile-nav')
if(target.parentElement.classList[1] == 'js-nav-icon'){

navigation.style.display = navigation.style.display === '' || navigation.style.display === 'none' ? 'block' :'none';

target.className = target.className === 'ion-navicon-round'? 'ion-close-round' : target.className === 'ion-close-round'? 'ion-navicon-round' : '';
}

});
