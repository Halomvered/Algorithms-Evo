var header = document.querySelector('header');
var nav = document.querySelector('nav');

function stickyNav(scroll_pos) {
scroll_pos = document.documentElement.scrollTop;

if(scroll_pos >= header.offsetHeight && nav.className != 'sticky') {
nav.className += 'sticky'; }

else if( scroll_pos < header.offsetHeight && nav.className == 'sticky'){ nav.classList.remove('sticky');
};
};


window.addEventListener('scroll', stickyNav);
