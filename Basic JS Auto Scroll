document.addEventListener('click',function(e){
var target = e.target;
if(target.parentElement.className == 'nav-li'){

var location = document.querySelector("."+target.id).offsetTop;
var scrollSpeed = (location-document.documentElement.scrollTop)/(400/15);
console.log(scrollSpeed);

var scrollInterval = setInterval(function(){

switch(scrollSpeed>0){
    case true:
if(document.documentElement.scrollTop < location){
window.scrollBy(0,scrollSpeed);
} else {
clearInterval(scrollInterval);
}
break;

    case false:
if (document.documentElement.scrollTop > location){
window.scrollBy(0,scrollSpeed);
} else {
clearInterval(scrollInterval);
}
}


},15);
